
{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 960,
  "height": 500,
  "autosize": "none",

  "data": [
    {
      "name": "Losses",
      "url": "https://raw.githubusercontent.com/hheavener/VA-HW3/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        { "type": "aggregate", 
        "groupby": ["State_Code", "State_Abv"],
        "ops": ["sum"], 
        "fields": ["Amount"], 
        "as":["total"]
        }
      ]
    },
    {
      "name": "states",
      "url": "https://raw.githubusercontent.com/vega/vega/master/docs/data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        { "type": "lookup", 
        "from": "Losses", 
        "key": "State_Code", 
        "fields": ["id"], 
        "values":["total"]},
        { "type": "filter", "expr": "datum.total != null" }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "albersUsa"
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 200000000],
      "range": {"scheme": "blues"}
    }
  ],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "enter": { "tooltip": {"signal": "'Amount' + datum.total"}},
        "update": { "fill": {"scale": "color", "field": "total"} },
        "hover": { "fill": {"value": "red"} }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    }
  ]
}
