{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 960,
  "height": 500,
  "autosize": "none",

  "data": [
    {
      "name": "Losses",
      "url": "https://raw.githubusercontent.com/hheavener/VA-HW3/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto"}
    },
    {
      "name": "states",
      "url": "https://raw.githubusercontent.com/vega/vega/master/docs/data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        { "type": "lookup", "from": "Losses", "key": "State_Code", "fields": ["id"], "values":["State_Abv","Amount"]},
        { "type": "filter", "expr": "datum.Amount != null" }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "albersUsa"
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 200000],
      "range": {"scheme": "blues", "count": 10}
    }
  ],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "enter": { "tooltip": {"signal": "datum.State_Abv"}},
        "update": { "fill": {"scale": "color", "field": "Amount"} },
        "hover": { "fill": {"value": "red"} }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    }
  ]
}
